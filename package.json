{
  "name": "nanobrowser-mcp-host",
  "version": "0.1.0",
  "description": "Nanobrowser MCP Native Messaging Host",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:tsc": "tsc",
    "build:bun": "bun build --compile --outfile=bin/nanobrowser-mcp-host-bun src/index.ts",
    "build:all": "npm run build && npm run build:bun",
    "start": "node dist/index.js",
    "install:host": "node scripts/install-host.js",
    "uninstall:host": "node scripts/uninstall-host.js",
    "deploy": "npm run build:all && npm run install:host",
    "test": "LOG_LEVEL=debug vitest run",
    "test:watch": "LOG_LEVEL=debug vitest",
    "test:unit": "LOG_LEVEL=debug vitest run tests/unit",
    "test:integration": "LOG_LEVEL=debug TEST_TYPE=integration vitest run --silent --reporter=dot tests/integration",
    "test:integration:single": "LOG_LEVEL=debug TEST_TYPE=integration vitest run --silent --reporter=dot tests/integration/cases/process-lifecycle.test.ts"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.11.1",
    "express": "^4.18.2",
    "iconv": "^3.0.1",
    "iconv-lite": "^0.6.3",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/event-source-polyfill": "^1.0.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.7",
    "@types/node": "^22.5.5",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "axios": "^1.6.0",
    "event-source-polyfill": "^1.0.31",
    "eventsource": "^2.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "typescript": "5.5.4",
    "uuid": "^9.0.1",
    "vite": "6.3.5",
    "vite-plugin-node": "^5.0.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.1"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
